<%= render "shared/banner_show" %>
<div class="container">
  <div class="d-flex justify-content-around position-relative">
    <div class="card card-position" style="width: 24rem;">
      <div class="card-body">
        <div class="d-flex justify-content-center">
          <%= cl_image_tag @cocktail.photo, height: 230, width: 250, crop: :fill %>
        </div>
        <ul>
          <% @cocktail.doses.each do |dose| %>
          <div class="m-2">
            <i class="far fa-check-circle"></i> <%= dose.ingredient.name %> <%= dose.description %>
          </div>
          <% end %>
        </ul>
        <div class="d-flex justify-content-around">
          <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class: "text-warning" %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="d-flex justify-content-center">
  <%= link_to 'back cocktails list', cocktails_path %>
</div>
