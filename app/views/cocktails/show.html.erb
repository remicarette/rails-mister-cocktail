<%= render "shared/banner_show" %>
<div class="container">
  <div class="d-flex justify-content-center">
    <div class="card card-position" style="width: 24rem;">
      <div class="card-body">
        <div class="">
          <div class="text-center"><h2><%= @cocktail.name %></h2></div>

          <div class="d-flex justify-content-center">
            <%= cl_image_tag @cocktail.photo, effect: "shadow", x: 1, y: 1, crop: "scale", height: 250, width: 250 %>
          </div>
        </div>
        <ul>
          <% @cocktail.doses.each do |dose| %>
          <div class="m-2">
            <i class="far fa-check-circle"></i> <%= dose.ingredient.name %> <%= dose.description %>
          </div>
          <% end %>
        </ul>
        <div class="d-flex justify-content-around">
          <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class: "text-warning" %>
        </div>
      </div>
    </div>
  </div>
</div>
